@model Music.ViewModels.AdminAlbumCreateViewModel

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="AdminAlbum" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Album.Id"/>
            </div>
            <p>Название</p>
            <div class="form-group">
                <input asp-for="@Model.Album.Name"/>
            </div>
            <p>Год выпуска</p>
            <div class="form-group">
                <input asp-for="@Model.Album.YearOfIssue"/>
            </div>
            <p>Путь картинки</p>
            <div class="form-group">
                <input type="file" asp-for="@Model.File"/>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Album.Songs"/>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.ArtistId"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить"/>
            </div>
        </form>
    </div>
</div>